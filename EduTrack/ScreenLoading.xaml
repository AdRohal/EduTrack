<Window x:Class="EduTrack.ScreenLoading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduTrack"
        mc:Ignorable="d"
        Title="ScreenLoading" Height="374" Width="600" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image Source="Image/LoadingScreen.png" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Center" Width="725" Margin="-14,0,0,0" Height="392"/>
        <ProgressBar Name="progressBar" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,361,0,0" Height="13" Width="600" ValueChanged="ProgressBar_ValueChanged" Foreground="Blue"/>
        <Label x:Name="progressLabel" Content="Loading..." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,330,0,0" Foreground="White"/>
    </Grid>
</Window>
